<Label>:
    font_name: "Arial"

<Screen>:
    on_pre_leave: app.previous_screen = self.name

<EmptySetList>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "No duplicate items were found."

<DuplicateSetList>:
    ScrollView:
        BoxLayout:
            id: set_list_box
            orientation: "vertical"

<DuplicateSetDetails>:
    ScrollView:
        GridLayout:
            size_hint_y: None
            height: sum(y.height for y in self.children)
            cols: 1
            BackToListButton:
                text: "← Back to List View"
                size_hint_y: None
                text_size: self.width, None
                height: 40
                width: 100
                padding_x: 10
                padding_y: 20
            GridLayout:
                size_hint_y: None
                height: sum(x.height for x in self.children)
                cols: 1
                id: set_details_box
            ApplyButton:
                text: "Apply Changes"


<LabeledCheckbox>:
    height: 160
    orientation: "horizontal"
    Label:
        size_hint_y: None
        text_size: self.width, None
        height: self.texture_size[1]
        text: root.label_text
    CheckBox:


<DuplicateSetDetailsColumnHeader>:
    orientation: "vertical"
    size_hint_y: None
    height: 160
    Label:
        text: root.item_id
        size_hint_y: None
        text_size: self.width, None
        height: 40
    ArchiveCheckbox:
        size_hint_y: None
        text_size: self.width, None
        height: 40
        label_text: "Archive"
    MultiprofileCheckbox:
        size_hint_y: None
        text_size: self.width, None
        height: 40
        label_text: "Multiprofile"
    CopyButton:
        size_hint_y: None
        text_size: self.width, None
        height: 40
        text: "Use as copy source"
        selected_item: root.selected_item

<HeaderRow>:
    height: 240
    padding_x: 10
    padding_y: 40


<RowHeaderCell>:
    height: 60
    text_size: self.size
    padding: [10,10]
    halign: "right"
    valign: "center"


<DataCell>:
    height: 60
    text_size: self.size
    padding: [10,10]
    valign: "center"

<ViewSetDetailsButton>:

<IndividualItemDetails>:
    ScrollView:
        GridLayout:
            size_hint_y: None
            height: sum(y.height for y in self.children)
            cols: 1
            BackToSetButton:
                text: "← Back to Set View"
                size_hint_y: None
                text_size: self.width, None
                height: 40
                width: 100
                padding_x: 10
                padding_y: 20
            GridLayout:
                size_hint_y: None
                height: sum(x.height for x in self.children)
                cols: 1
                id: set_details_box
            ConfirmCopyButton:
                text: "Copy to other items in set"
