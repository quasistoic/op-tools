#:import utils kivy.utils
#:set brown utils.get_color_from_hex('#463730')
#:set dark_blue utils.get_color_from_hex('#1F5673')
#:set medium_blue utils.get_color_from_hex('#759FBC')
#:set light_blue utils.get_color_from_hex('#90C3C8')
#:set periwinkle utils.get_color_from_hex('#B9B8D3')

<Label>:
    font_name: "Arial"
    color: periwinkle

<CheckBox>:
    canvas.before:
        Color:
            rgba: medium_blue
        Rectangle:
            pos: self.pos
            size: self.size

<Button>:
    background_color: brown
    color: periwinkle

<IconButton>:
    size_hint_y: None
    text_size: self.width, None
    height: 60
    padding_x: 55
    padding_y: 10
    icon_source: ''
    text: ''
    Image:
        source: root.icon_source
        y: self.parent.y + self.parent.height - self.parent.padding_y - 40
        x: self.parent.x + 10
        size: 40, 40
        allow_stretch: True

<BackToListButton>:
    text: "Back to List View"
    icon_source: 'src/images/white-24dp/2x/twotone_arrow_back_white_24dp.png'
    width: 100

<CopyButton>:
    text: "Copy to others"
    icon_source: 'src/images/white-24dp/2x/twotone_content_copy_white_24dp.png'

<RefreshButton>:
    text: "Refresh"
    icon_source: 'src/images/white-24dp/2x/twotone_refresh_white_24dp.png'

<Screen>:
    on_pre_leave: app.previous_screen = self.name
    color: periwinkle

<EmptySetList>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "No duplicate items were found."

<DuplicateSetList>:
    on_pre_enter: app.title = "1Password Duplicate Manager"
    ScrollView:
        GridLayout:
            cols: 1
            GridLayout:
                cols: 1
                size_hint_y: None
                height: sum(x.height for x in self.children)
                halign: "right"
                RefreshListButton:
            BoxLayout:
                id: set_list_box
                orientation: "vertical"

<DuplicateSetDetails>:
    on_pre_enter: app.title = "Viewing Duplicate Set " + self.selected_set.get_display_name()
    ScrollView:
        GridLayout:
            canvas.before:
                Color:
                    rgba: dark_blue
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: None
            height: self.minimum_height
            cols: 1
            GridLayout:
                cols: 3
                BackToListButton:
                IgnoreSetButton:
                    selected_set: root.selected_set
                    text: "Ignore entire set"
                    icon_source: 'src/images/white-24dp/2x/twotone_notifications_paused_white_24dp.png'
                RefreshSetButton:
                    selected_set: root.selected_set
            GridLayout:
                size_hint_y: None
                height: sum(x.height for x in self.children)
                cols: 1
                id: set_details_box

<DuplicateSetDetailsColumnHeader>:
    orientation: "vertical"
    size_hint_y: None
    height: 160
    Label:
        text: root.item_id
        size_hint_y: None
        text_size: self.width, None
        height: 40
    ArchiveButton:
        selected_item: root.selected_item
        text: "Archive"
        icon_source: 'src/images/white-24dp/2x/twotone_archive_white_24dp.png'

<HeaderRow>:
    height: 240
    padding_x: 10
    padding_y: 40

<DataRow>:
    height: 240
    padding_x: 10
    padding_y: 40
    background_color: .5, .5, .5, .5
    spacing: 10
    color: brown
    canvas.before:
        Color:
            rgba: medium_blue
        Rectangle:
            size: self.size
            pos: self.pos

<RowHeaderCell>:
    height: 60
    text_size: self.size
    padding: [10,10]
    halign: "right"
    valign: "center"
    color: brown
    size_hint_x: .25

<SetDetailsOriginCell>:
    color: periwinkle

<FieldDataCell>:
    orientation: "vertical"
    size_hint_y: None
    height: 160
    Label:
        text_size: self.size
        padding: [10,10]
        valign: "center"
        text: root.field_data
        color: brown
    CopyButton:
        selected_item: root.selected_item
        selected_set: root.selected_set
        field_name: root.field_name

<ViewSetDetailsButton>:
